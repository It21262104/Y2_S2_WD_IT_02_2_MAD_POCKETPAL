<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_text"
    tools:context=".Register">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@drawable/icon_wave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-206dp">

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="99dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="99dp"
            android:background="@color/background_text"
            android:text="@string/tvRegister"
            android:textAlignment="center"
            android:textColor="@color/background_main"
            android:textSize="@dimen/tvTopic_textSize"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="356dp"
        android:layout_height="400dp"
        app:cardBackgroundColor="#c6934f"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/icon_user" />

            <EditText
                android:id="@+id/edtNameRegister"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="16dp"
                android:background="@color/textBox"
                android:drawableRight="@drawable/icon_edit"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/edtName2"
                android:textAlignment="center"
                android:textColor="@color/background_main"
                android:textSize="20sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/edtEmailRegister"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="50dp"
                android:background="@color/textBox"
                android:drawableRight="@drawable/icon_edit"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="@string/edtEmail"
                android:textAlignment="center"
                android:textColor="@color/background_main"
                android:textSize="20sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/edtPasswordRegister"
                android:layout_width="253dp"
                android:layout_height="48dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:background="@color/textBox"
                android:drawableRight="@drawable/icon_edit"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/edtPassword"
                android:textAlignment="center"
                android:textColor="@color/background_main"
                android:textSize="20sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btnRegisterButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/background_main"
                android:text="@string/btnRegister3"
                android:textColor="@color/background_text"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="18dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>