<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btnColor"
    tools:context=".Home">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:background="@drawable/icon_wave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-206dp">

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="16dp"
            android:text="@string/tvIntro"
            android:textAlignment="center"
            android:textColor="@color/background_text"
            android:textSize="20sp" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardBackgroundColor="#3AFFFFFF"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView24"
        android:layout_width="@dimen/home_layout_width"
        android:layout_height="@dimen/home_layout_height"
        android:layout_marginTop="40dp"
        android:background="@color/background_text"
        android:text="@string/tvHome"
        android:textAlignment="center"
        android:textColor="@color/background_main"
        android:textSize="@dimen/tvTopic_textSize"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/home_img_layout_width"
        android:layout_height="@dimen/home_img_layout_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/btnLoginRegister"
        android:layout_width="@dimen/home_btnLogin_layout_width"
        android:layout_height="@dimen/home_btnLogin_layout_height"
        android:layout_marginEnd="60dp"
        android:backgroundTint="@color/background_main"
        android:text="@string/btnLogin"
        android:textColor="@color/background_text"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="0.302" />

    <Button
        android:id="@+id/btnRegisterHome"
        android:layout_width="@dimen/home_btnRegister_layout_width"
        android:layout_height="@dimen/home_btnRegister_layout_height"
        android:layout_marginStart="52dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/background_main"
        android:text="@string/btnRegister"
        android:textColor="@color/background_text"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="0.012" />

</androidx.constraintlayout.widget.ConstraintLayout>