<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_text"
    tools:context=".UserProfile">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@drawable/icon_wave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-206dp">

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/login_cv_layout_width"
        android:layout_height="280dp"
        app:cardBackgroundColor="#c6934f"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="18dp"
                app:srcCompat="@drawable/icon_user" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="16dp"
                android:background="@color/textBox"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Email"
                android:textAlignment="center"
                android:textColor="@color/background_main"
                android:textSize="@dimen/login_edt"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btnLogOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_btn_margin_left"
                android:layout_marginRight="@dimen/login_btn_margin_right"
                android:backgroundTint="@color/background_main"
                android:text="Log out"
                android:textColor="@color/background_text"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="18dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView30"
        android:layout_width="270dp"
        android:layout_height="@dimen/login_topic_layout_height"
        android:layout_marginTop="40dp"
        android:background="@color/background_text"
        android:text="USER PROFILE "
        android:textAlignment="center"
        android:textColor="@color/background_main"
        android:textSize="@dimen/tvTopic_textSize"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnMyBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="460dp"
            android:backgroundTint="@color/background_main"
            android:text="My Budget"
            android:textColor="@color/background_text"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="18dp" />

        <Button
            android:id="@+id/btnNewMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="@color/background_main"
            android:text="Add new Month"
            android:textColor="@color/background_text"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="18dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>